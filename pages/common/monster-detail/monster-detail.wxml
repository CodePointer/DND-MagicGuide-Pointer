<!--pages/common/monster-detail/monster-detail.wxml-->
<view class="monster-detail-container">
  <view class="title-container">
    <view class="text-container">
      <text class="monster-name">{{titleDesc}}</text>
    </view>
  </view>

  <view class="sub-title-container">
    <view class="text-container">
      <text class="sub-title-text">{{subTitleDesc}}</text>
    </view>
  </view>

  <view class="ability-table-col-container">
    <view class="ability-table-row-container ability-table-row-container-title">
      <view class="ability-table-cell-container" wx:for="{{tableInfo.title}}" wx:key="id">
        <text class="table-title">{{item}}</text>
      </view>
    </view>
    <view class="ability-table-row-container">
      <view class="ability-table-cell-container" wx:for="{{tableInfo.scores}}" wx:key="id">
        <text class="table-scores">{{item}}</text>
      </view>
    </view>
    <view class="ability-table-row-container">
      <view class="ability-table-cell-container" wx:for="{{tableInfo.mod}}" wx:key="id">
        <text class="table-mod">{{item}}</text>
      </view>
    </view>
    <view class="ability-table-row-container">
      <view class="ability-table-cell-container" wx:for="{{tableInfo.save}}" wx:key="id">
        <text class="table-save">{{item}}</text>
      </view>
    </view>
  </view>

  <view class="property-container row-based-container">
    <view class="property-pair-container" wx:for="{{shortPropertyPair}}" wx:key="title">
      <text class="property-title">{{item.title}}</text>
      <text class="property-desc">{{item.desc}}</text>
    </view>
  </view>

  <view class="property-container">
    <view class="property-pair-container" wx:for="{{propertyPair}}" wx:key="title">
      <view>
        <text class="property-title">{{item.title}}: </text>
        <text class="property-desc">{{item.desc}}</text>
      </view>
    </view>
  </view>

  <scroll-view class="description-container" scroll-y>
    <view class="section-container" wx:for="{{procMonster.sections}}" wx:key="id">
      <view class="section-title-container">
        <text class="section-title">{{item.title}}</text>
      </view>
      <view class="section-content-container">
        <rich-text class="section-content" nodes="{{item.content}}"></rich-text>
      </view>
    </view>
  </scroll-view>

  <view class="footnote-container">
    <view class="footnote-item-container">
      <view class="footnote-text-containter">
        <text class="footnote-text">{{footNoteDesc}}</text>
      </view>
      <view class="footnote-text-containter">
        <text class="footnote-text">{{procMonster.source}}</text>
      </view>
    </view>
  </view>

</view>