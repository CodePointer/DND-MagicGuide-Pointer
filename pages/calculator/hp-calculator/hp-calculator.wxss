/* pages/calculator/hp-calculator/hp-calculator.wxss */
.hp-calculator-container {
  margin: var(--space-md);
  display: flex;
  flex-direction: column;
  gap: var(--space-sm);
}

.button-container {
  display: flex;
  gap: var(--space-md);
}
.report-container {
  margin-top: var(--space-md);
  display: flex;
  flex-direction: column;
  gap: var(--space-sm);
}

.title-container {
  display: flex;
  justify-content: center;
}
.total-hp {
  font-size: var(--font-size-title);
}
.detail-table-col-container {
  display: flex;
  flex-direction: column;
}
.detail-table-row-container {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.detail-table-row-container-title {
  border-bottom: 1px solid;
}
.detail-table-cell-container {
  flex: 1;
  min-width: 0;
  text-align: center;
}
.table-title {
  font-size: var(--font-size-bodysmall);
  font-weight: var(--font-weight-bold);
}
.table-value {
  font-size: var(--font-size-bodysmall);
}